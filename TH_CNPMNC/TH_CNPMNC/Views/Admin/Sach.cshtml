@using TH_CNPMNC.Models
@using PagedList.Mvc;
@model PagedList.PagedList<TH_CNPMNC.Models.SACH>

@helper Truncate(string input, int length)
    {
        if(input.Length<length)
        {
            @input
        }
        else
        {
            @input.Substring(0, length)<text>...</text>
        }
    }
